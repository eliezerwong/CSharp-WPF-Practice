<Window x:Class="Problem3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problem3"
        mc:Ignorable="d"
        Title="Problem 3 - Random Video" Height="450" Width="800">
    <Grid>
        <Label Content="Get Random Video" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Button x:Name="btnGetVideo" Content="Get Video" HorizontalAlignment="Left" Margin="681,32,0,0" VerticalAlignment="Top" Height="43" Width="109" Click="btnGetVideo_Click"/>
        <MediaElement x:Name="medVideo" HorizontalAlignment="Left" Height="277" Margin="10,85,0,0" VerticalAlignment="Top" Width="773" UnloadedBehavior="Manual"/>
        <Button x:Name="btnPlayAndPause" Content="Play" HorizontalAlignment="Left" Margin="22,379,0,0" VerticalAlignment="Top" Height="32" Width="83" Click="btnPlayAndPause_Click" />
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="164,379,0,0" VerticalAlignment="Top" Height="32" Width="86" Click="btnStop_Click"/>

    </Grid>
</Window>
